<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Haulory.Mobile.Views.EditDriverPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Edit Driver">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="14">

            <!-- DRIVER DETAILS -->
            <Border StrokeThickness="1"
                    Stroke="{AppThemeBinding Light='#E5E7EB', Dark='#374151'}"
                    StrokeShape="RoundRectangle 16"
                    Padding="14">

                <VerticalStackLayout Spacing="10">
                    <Label Text="Driver Details"
                           FontSize="16"
                           FontAttributes="Bold" />

                    <Entry Placeholder="First name"
                           Text="{Binding FirstName}" />

                    <Entry Placeholder="Last name"
                           Text="{Binding LastName}" />

                    <Entry Placeholder="Email"
                           Keyboard="Email"
                           Text="{Binding Email}" />

                    <Entry Placeholder="Licence number (optional)"
                           Text="{Binding LicenceNumber}" />
                </VerticalStackLayout>
            </Border>

            <!-- EMERGENCY CONTACT -->
            <Border StrokeThickness="1"
                    Stroke="{AppThemeBinding Light='#E5E7EB', Dark='#374151'}"
                    StrokeShape="RoundRectangle 16"
                    Padding="14">

                <VerticalStackLayout Spacing="10">
                    <Label Text="Emergency Contact"
                           FontSize="16"
                           FontAttributes="Bold" />

                    <Entry Placeholder="First name"
                           Text="{Binding EmergencyFirstName}" />

                    <Entry Placeholder="Last name"
                           Text="{Binding EmergencyLastName}" />

                    <Entry Placeholder="Relationship"
                           Text="{Binding EmergencyRelationship}" />

                    <Entry Placeholder="Email"
                           Keyboard="Email"
                           Text="{Binding EmergencyEmail}" />

                    <Entry Placeholder="Phone number"
                           Keyboard="Telephone"
                           Text="{Binding EmergencyPhoneNumber}" />

                    <Entry Placeholder="Secondary phone (optional)"
                           Keyboard="Telephone"
                           Text="{Binding EmergencySecondaryPhoneNumber}" />
                </VerticalStackLayout>
            </Border>

            <!-- SAVE -->
            <Button Text="Save"
                    Command="{Binding SaveCommand}"
                    IsEnabled="{Binding CanSave}"
                    HeightRequest="50"
                    CornerRadius="14"
                    BackgroundColor="#2563EB"
                    TextColor="White" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
