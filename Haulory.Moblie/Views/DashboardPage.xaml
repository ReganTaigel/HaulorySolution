<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Haulory.Moblie.Views.DashboardPage"
    Title="Dashboard">

    <VerticalStackLayout
        Padding="24"
        Spacing="16">

        <Label
            Text="Welcome to Haulory"
            FontSize="24"
            FontAttributes="Bold" />

        <Button
            Text="Logout"
            Command="{Binding LogoutCommand}"
            BackgroundColor="#DC2626"
            TextColor="White"
            CornerRadius="10"
            HeightRequest="44" />

    </VerticalStackLayout>

</ContentPage>
