<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Haulory.Moblie.Views.DashboardPage"
    Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="20">

            <!-- HEADER -->
            <VerticalStackLayout Spacing="4">
                <Label
                    Text="Haulory"
                    FontSize="28"
                    FontAttributes="Bold" />

                <Label
                    Text="Business overview"
                    FontSize="14"
                    TextColor="Gray" />
            </VerticalStackLayout>

            <!-- JOBS -->
            <Border
                StrokeThickness="1"
                Stroke="{AppThemeBinding Light='#E5E7EB', Dark='#374151'}"
                StrokeShape="RoundRectangle 16"
                Padding="16">

                <VerticalStackLayout Spacing="12">
                    <Label
                        Text="Jobs"
                        FontSize="18"
                        FontAttributes="Bold" />

                    <Label
                        Text="{Binding CurrentJobSummary}"
                        FontSize="14"
                        TextColor="Gray" />

                    <Button
                        Text="Manage Jobs"
                        Command="{Binding GoToJobsCommand}" />
                </VerticalStackLayout>
            </Border>

            <!-- VEHICLES -->
            <Border
                StrokeThickness="1"
                Stroke="{AppThemeBinding Light='#E5E7EB', Dark='#374151'}"
                StrokeShape="RoundRectangle 16"
                Padding="16">

                <VerticalStackLayout Spacing="12">
                    <Label
                        Text="Vehicles"
                        FontSize="18"
                        FontAttributes="Bold" />

                    <Button
                        Text="Manage Vehicles"
                        Command="{Binding GoToVehiclesCommand}" />
                </VerticalStackLayout>
            </Border>

            <!-- DRIVERS -->
            <Border
                StrokeThickness="1"
                Stroke="{AppThemeBinding Light='#E5E7EB', Dark='#374151'}"
                StrokeShape="RoundRectangle 16"
                Padding="16">

                <VerticalStackLayout Spacing="12">
                    <Label
                        Text="Drivers"
                        FontSize="18"
                        FontAttributes="Bold" />

                    <Button
                        Text="Manage Drivers"
                        Command="{Binding GoToDriversCommand}" />
                </VerticalStackLayout>
            </Border>

            <!-- REPORTS -->
            <Border
                StrokeThickness="1"
                Stroke="{AppThemeBinding Light='#E5E7EB', Dark='#374151'}"
                StrokeShape="RoundRectangle 16"
                Padding="16">

                <VerticalStackLayout Spacing="12">
                    <Label
                        Text="Reports"
                        FontSize="18"
                        FontAttributes="Bold" />

                    <!-- Quick stats row -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <Border
                            Grid.Column="0"
                            StrokeThickness="1"
                            Stroke="{AppThemeBinding Light='#E5E7EB', Dark='#374151'}"
                            StrokeShape="RoundRectangle 14"
                            Padding="12">

                            <VerticalStackLayout Spacing="2">
                                <Label Text="Delivered (Today)" FontSize="12" TextColor="Gray"/>
                                <Label Text="{Binding CompletedTodayCount}" FontSize="22" FontAttributes="Bold"/>
                            </VerticalStackLayout>
                        </Border>

                        <Border
                            Grid.Column="1"
                            StrokeThickness="1"
                            Stroke="{AppThemeBinding Light='#E5E7EB', Dark='#374151'}"
                            StrokeShape="RoundRectangle 14"
                            Padding="12">

                            <VerticalStackLayout Spacing="2">
                                <Label Text="Revenue (Today)" FontSize="12" TextColor="Gray"/>
                                <Label Text="{Binding RevenueToday, StringFormat='{}{0:C}'}"
                                       FontSize="22"
                                       FontAttributes="Bold"/>
                            </VerticalStackLayout>
                        </Border>
                    </Grid>

                    <!-- Latest completed job summary -->
                    <Label
                        Text="{Binding LatestCompletedSummary}"
                        FontSize="13"
                        TextColor="Gray" />

                    <Button
                        Text="View Reports"
                        Command="{Binding GoToReportsCommand}" />
                </VerticalStackLayout>
            </Border>

            <!-- LOGOUT -->
            <Button
                Text="Logout"
                Command="{Binding LogoutCommand}"
                BackgroundColor="#DC2626"
                TextColor="White"
                CornerRadius="14"
                HeightRequest="48"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
