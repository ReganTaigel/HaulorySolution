<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Haulory.Mobile.Views.NewVehiclePage"
    Title="Add Vehicles">

    <ScrollView>
        <VerticalStackLayout Spacing="14" Padding="20">

            <!-- VEHICLE TYPE -->
            <Border StrokeThickness="1"
                    Stroke="{AppThemeBinding Light='#E5E7EB', Dark='#374151'}"
                    StrokeShape="RoundRectangle 16"
                    BackgroundColor="{AppThemeBinding Light='#FFFFFF', Dark='#111827'}"
                    Padding="14">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Vehicle Type"
                           FontAttributes="Bold"
                           FontSize="16"/>

                    <Picker Title="Select vehicle type"
                            ItemsSource="{Binding VehicleTypes}"
                            ItemDisplayBinding="{Binding Display}"
                            SelectedItem="{Binding SelectedVehicleType}" />
                </VerticalStackLayout>
            </Border>

            <!-- LIGHT TRAILER CONFIG -->
            <Border IsVisible="{Binding ShowLightTrailerConfig}"
                    StrokeThickness="1"
                    Stroke="{AppThemeBinding Light='#E5E7EB', Dark='#374151'}"
                    StrokeShape="RoundRectangle 16"
                    BackgroundColor="{AppThemeBinding Light='#FFFFFF', Dark='#111827'}"
                    Padding="14">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Trailer Configuration"
                           FontAttributes="Bold"
                           FontSize="16"/>
                    <Label Text="This helps determine what details are required next."
                           FontSize="12"
                           TextColor="Gray"/>

                    <Picker Title="Select trailer configuration"
                            ItemsSource="{Binding LightTrailerConfigurations}"
                            ItemDisplayBinding="{Binding Display}"
                            SelectedItem="{Binding SelectedLightConfig}" />
                </VerticalStackLayout>
            </Border>

            <!-- CLASS 4 UNIT TYPE -->
            <Border IsVisible="{Binding ShowClass4UnitType}"
                    StrokeThickness="1"
                    Stroke="{AppThemeBinding Light='#E5E7EB', Dark='#374151'}"
                    StrokeShape="RoundRectangle 16"
                    BackgroundColor="{AppThemeBinding Light='#FFFFFF', Dark='#111827'}"
                    Padding="14">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Class 4 Unit Type"
                           FontAttributes="Bold"
                           FontSize="16"/>
                    <Label Text="Choose the power unit type."
                           FontSize="12"
                           TextColor="Gray"/>

                    <Picker Title="Select unit type"
                            ItemsSource="{Binding Class4UnitTypes}"
                            ItemDisplayBinding="{Binding Display}"
                            SelectedItem="{Binding SelectedClass4UnitType}" />
                </VerticalStackLayout>
            </Border>

            <!-- HEAVY CONFIG -->
            <Border IsVisible="{Binding ShowHeavyConfig}"
                    StrokeThickness="1"
                    Stroke="{AppThemeBinding Light='#E5E7EB', Dark='#374151'}"
                    StrokeShape="RoundRectangle 16"
                    BackgroundColor="{AppThemeBinding Light='#FFFFFF', Dark='#111827'}"
                    Padding="14">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Configuration"
                           FontAttributes="Bold"
                           FontSize="16"/>
                    <Label Text="This determines how many regos + odometers you need."
                           FontSize="12"
                           TextColor="Gray"/>

                    <Picker Title="Select configuration"
                            ItemsSource="{Binding HeavyConfigurations}"
                            ItemDisplayBinding="{Binding Display}"
                            SelectedItem="{Binding SelectedHeavyConfig}" />
                </VerticalStackLayout>
            </Border>

            <!-- REGO -->
            <Border IsVisible="{Binding ReadyForRego}"
                    StrokeThickness="1"
                    Stroke="{AppThemeBinding Light='#E5E7EB', Dark='#374151'}"
                    StrokeShape="RoundRectangle 16"
                    BackgroundColor="{AppThemeBinding Light='#FFFFFF', Dark='#111827'}"
                    Padding="14">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Registration (Rego)"
                           FontAttributes="Bold"
                           FontSize="16"/>
                    <Label Text="Enter the rego(s) for your selected combination."
                           FontSize="12"
                           TextColor="Gray"/>

                    <VerticalStackLayout IsVisible="{Binding ShowUnit1Rego}" Spacing="6">
                        <Label Text="{Binding Unit1Label}" FontSize="12" TextColor="Gray"/>
                        <Entry Placeholder="e.g. ABC123"
                               Text="{Binding Unit1Rego}" />
                    </VerticalStackLayout>

                    <VerticalStackLayout IsVisible="{Binding ShowUnit2Rego}" Spacing="6">
                        <Label Text="{Binding Unit2Label}" FontSize="12" TextColor="Gray"/>
                        <Entry Placeholder="e.g. TRL456"
                               Text="{Binding Unit2Rego}" />
                    </VerticalStackLayout>

                    <VerticalStackLayout IsVisible="{Binding ShowUnit3Rego}" Spacing="6">
                        <Label Text="{Binding Unit3Label}" FontSize="12" TextColor="Gray"/>
                        <Entry Placeholder="e.g. TRL789"
                               Text="{Binding Unit3Rego}" />
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- REGO EXPIRY -->
            <Border IsVisible="{Binding ShowRegoExpiry}"
                StrokeThickness="1"
                Stroke="{AppThemeBinding Light='#E5E7EB', Dark='#374151'}"
                StrokeShape="RoundRectangle 16"
                BackgroundColor="{AppThemeBinding Light='#FFFFFF', Dark='#111827'}"
                Padding="14">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Rego Expiry"
                       FontAttributes="Bold"
                       FontSize="16"/>
                    <Label Text="Select the expiry date for each rego."
                       FontSize="12"
                       TextColor="Gray"/>

                    <!-- Unit 1 (POWERED ONLY) -->
                    <VerticalStackLayout IsVisible="{Binding ShowUnit1Rego}" Spacing="6">
                        <Label Text="{Binding Unit1Label}" FontSize="12" TextColor="Gray"/>
                        <DatePicker Date="{Binding Unit1RegoExpiry}"
                            Format="dd/MM/yyyy" />
                    </VerticalStackLayout>

                    <!-- Unit 2 (TRAILER #1) -->
                    <VerticalStackLayout IsVisible="{Binding ShowUnit2Rego}" Spacing="6">
                        <Label Text="{Binding Unit2Label}" FontSize="12" TextColor="Gray"/>
                        <DatePicker Date="{Binding Unit2RegoExpiry}"
                            Format="dd/MM/yyyy" />
                    </VerticalStackLayout>

                    <!-- Unit 3 (B-TRAIN TRAILER #2) -->
                    <VerticalStackLayout IsVisible="{Binding ShowUnit3Rego}" Spacing="6">
                        <Label Text="{Binding Unit3Label}" FontSize="12" TextColor="Gray"/>
                        <DatePicker Date="{Binding Unit3RegoExpiry}"
                            Format="dd/MM/yyyy" />
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </Border>

            <!-- MAKE & MODEL (after rego expiry) -->
            <Border IsVisible="{Binding ShowMakeModel}"
                StrokeThickness="1"
                Stroke="{AppThemeBinding Light='#E5E7EB', Dark='#374151'}"
                StrokeShape="RoundRectangle 16"
                BackgroundColor="{AppThemeBinding Light='#FFFFFF', Dark='#111827'}"
                Padding="14">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Make And Model"
                       FontAttributes="Bold"
                       FontSize="16"/>

                    <!-- Unit 1 (POWERED ONLY) -->
                    <VerticalStackLayout IsVisible="{Binding ShowUnit1Rego}" Spacing="6">
                        <Label Text="{Binding Unit1MakeModelLabel}" FontSize="12" TextColor="Gray"/>
                        <Entry Placeholder="Make" Text="{Binding Unit1Make}" />
                        <Entry Placeholder="Model" Text="{Binding Unit1Model}" />
                        <Entry Placeholder="Year (e.g. 2018)" Keyboard="Numeric" Text="{Binding Unit1Year}" />
                    </VerticalStackLayout>

                    <!-- Unit 2 (TRAILER #1) -->
                    <VerticalStackLayout IsVisible="{Binding ShowUnit2Rego}" Spacing="6">
                        <Label Text="{Binding Unit2MakeModelLabel}" FontSize="12" TextColor="Gray"/>
                        <Entry Placeholder="Make" Text="{Binding Unit2Make}" />
                        <Entry Placeholder="Model" Text="{Binding Unit2Model}" />
                        <Entry Placeholder="Year (e.g. 2018)" Keyboard="Numeric" Text="{Binding Unit2Year}" />
                    </VerticalStackLayout>

                    <!-- Unit 3 (B-TRAIN TRAILER #2) -->
                    <VerticalStackLayout IsVisible="{Binding ShowUnit3Rego}" Spacing="6">
                        <Label Text="{Binding Unit3MakeModelLabel}" FontSize="12" TextColor="Gray"/>
                        <Entry Placeholder="Make" Text="{Binding Unit3Make}" />
                        <Entry Placeholder="Model" Text="{Binding Unit3Model}" />
                        <Entry Placeholder="Year (e.g. 2018)" Keyboard="Numeric" Text="{Binding Unit3Year}" />
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </Border>

            <!-- WOF / COF EXPIRY -->
            <Border IsVisible="{Binding ShowCertificateStep}"
                    StrokeThickness="1"
                    Stroke="{AppThemeBinding Light='#E5E7EB', Dark='#374151'}"
                    StrokeShape="RoundRectangle 16"
                    BackgroundColor="{AppThemeBinding Light='#FFFFFF', Dark='#111827'}"
                    Padding="14">
                <VerticalStackLayout Spacing="12">

                    <Label Text="{Binding CertificatePluralName}"
                           FontAttributes="Bold"
                           FontSize="16" />

                    <VerticalStackLayout IsVisible="{Binding ShowUnit1Cert}" Spacing="6">
                        <Label Text="{Binding Unit1CertLabel}" FontSize="12" TextColor="Gray"/>
                        <DatePicker Date="{Binding Unit1CertExpiry}" Format="dd/MM/yyyy"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout IsVisible="{Binding ShowUnit2Cert}" Spacing="6">
                        <Label Text="{Binding Unit2CertLabel}" FontSize="12" TextColor="Gray"/>
                        <DatePicker Date="{Binding Unit2CertExpiry}" Format="dd/MM/yyyy"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout IsVisible="{Binding ShowUnit3Cert}" Spacing="6">
                        <Label Text="{Binding Unit3CertLabel}" FontSize="12" TextColor="Gray"/>
                        <DatePicker Date="{Binding Unit3CertExpiry}" Format="dd/MM/yyyy"/>
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </Border>

            <!-- FUEL TYPE -->
            <Border IsVisible="{Binding ShowFuelType}"
                    StrokeThickness="1"
                    Stroke="{AppThemeBinding Light='#E5E7EB', Dark='#374151'}"
                    StrokeShape="RoundRectangle 16"
                    BackgroundColor="{AppThemeBinding Light='#FFFFFF', Dark='#111827'}"
                    Padding="14">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Fuel Type"
                           FontAttributes="Bold"
                           FontSize="16"/>

                    <Picker Title="Select fuel type"
                            ItemsSource="{Binding FuelTypes}"
                            ItemDisplayBinding="{Binding Display}"
                            SelectedItem="{Binding SelectedFuelType}" />

                    <Label Text="{Binding FuelInfoText}"
                           FontSize="12"
                           TextColor="Gray"
                           IsVisible="{Binding SelectedFuelType}" />
                </VerticalStackLayout>
            </Border>

            <!-- ODOMETER -->  
            <Border IsVisible="{Binding ShowOdometers}"
                    StrokeThickness="1"
                    Stroke="{AppThemeBinding Light='#E5E7EB', Dark='#374151'}"
                    StrokeShape="RoundRectangle 16"
                    BackgroundColor="{AppThemeBinding Light='#FFFFFF', Dark='#111827'}"
                    Padding="14">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Odometer"
                           FontAttributes="Bold"
                           FontSize="16"/>
                    <Label Text="Enter the current odometer reading(s)."
                           FontSize="12"
                           TextColor="Gray"/>

                    <VerticalStackLayout IsVisible="{Binding ShowPowerUnitOdo}" Spacing="6">
                        <Label Text="{Binding PowerUnitOdoLabel}" FontSize="12" TextColor="Gray"/>
                        <Entry Placeholder="e.g. 182340"
                               Keyboard="Numeric"
                               Text="{Binding PowerUnitOdometerKm}" />
                    </VerticalStackLayout>

                    <VerticalStackLayout IsVisible="{Binding ShowTrailer1Odo}" Spacing="6">
                        <Label Text="{Binding Trailer1OdoLabel}" FontSize="12" TextColor="Gray"/>
                        <Entry Placeholder="e.g. 90210"
                               Keyboard="Numeric"
                               Text="{Binding Trailer1OdometerKm}" />
                    </VerticalStackLayout>

                    <VerticalStackLayout IsVisible="{Binding ShowTrailer2Odo}" Spacing="6">
                        <Label Text="{Binding Trailer2OdoLabel}" FontSize="12" TextColor="Gray"/>
                        <Entry Placeholder="e.g. 88120"
                               Keyboard="Numeric"
                               Text="{Binding Trailer2OdometerKm}" />
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- RUC (Road User Charges) -->
            <Border IsVisible="{Binding ShowRucStep}"
        StrokeThickness="1"
        Stroke="{AppThemeBinding Light='#E5E7EB', Dark='#374151'}"
        StrokeShape="RoundRectangle 16"
        BackgroundColor="{AppThemeBinding Light='#FFFFFF', Dark='#111827'}"
        Padding="14">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Road User Charges (RUC)"
               FontAttributes="Bold"
               FontSize="16" />
                    <Label Text="Enter the last RUC licence range (start and end)."
               FontSize="12"
               TextColor="Gray" />

                    <!-- UNIT 1 -->
                    <VerticalStackLayout IsVisible="{Binding ShowUnit1Ruc}" Spacing="10">
                        <Label Text="{Binding Unit1RucLabel}" FontAttributes="Bold" FontSize="14"/>

                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                            <VerticalStackLayout Grid.Column="0" Spacing="6">
                                <Label Text="Licence start (km)" FontSize="12" TextColor="Gray"/>
                                <Entry Placeholder="e.g. 1000" Keyboard="Numeric" Text="{Binding Unit1RucLicenceStartKm}" />
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1" Spacing="6">
                                <Label Text="Licence end (km)" FontSize="12" TextColor="Gray"/>
                                <Entry Placeholder="e.g. 2000" Keyboard="Numeric" Text="{Binding Unit1RucLicenceEndKm}" />
                            </VerticalStackLayout>
                        </Grid>

                    </VerticalStackLayout>

                    <!-- UNIT 2 -->
                    <VerticalStackLayout IsVisible="{Binding ShowUnit2Ruc}" Spacing="10">
                        <Label Text="{Binding Unit2RucLabel}" FontAttributes="Bold" FontSize="14"/>

                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                            <VerticalStackLayout Grid.Column="0" Spacing="6">
                                <Label Text="Licence start (km)" FontSize="12" TextColor="Gray"/>
                                <Entry Placeholder="e.g. 1000" Keyboard="Numeric" Text="{Binding Unit2RucLicenceStartKm}" />
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1" Spacing="6">
                                <Label Text="Licence end (km)" FontSize="12" TextColor="Gray"/>
                                <Entry Placeholder="e.g. 2000" Keyboard="Numeric" Text="{Binding Unit2RucLicenceEndKm}" />
                            </VerticalStackLayout>
                        </Grid>

                    </VerticalStackLayout>

                    <!-- UNIT 3 -->
                    <VerticalStackLayout IsVisible="{Binding ShowUnit3Ruc}" Spacing="10">
                        <Label Text="{Binding Unit3RucLabel}" FontAttributes="Bold" FontSize="14"/>

                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                            <VerticalStackLayout Grid.Column="0" Spacing="6">
                                <Label Text="Licence start (km)" FontSize="12" TextColor="Gray"/>
                                <Entry Placeholder="e.g. 1000" Keyboard="Numeric" Text="{Binding Unit3RucLicenceStartKm}" />
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1" Spacing="6">
                                <Label Text="Licence end (km)" FontSize="12" TextColor="Gray"/>
                                <Entry Placeholder="e.g. 2000" Keyboard="Numeric" Text="{Binding Unit3RucLicenceEndKm}" />
                            </VerticalStackLayout>
                        </Grid>

                    </VerticalStackLayout>

                </VerticalStackLayout>
            </Border>

            <!-- SAVE BUTTON (LAST STEP) -->
            <Button
                Text="Save Vehicle"
                Command="{Binding SaveVehicleCommand}"
                IsEnabled="{Binding CanSaveVehicle}"
                IsVisible="{Binding ShowSaveButton}"
                Margin="0,16,0,0" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
